<html>
  <%= render 'modal'%>
  <div id="carouselExampleControls" class="carousel slide " data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="products/assets/images/index_page/carousel/carousel1.jpg" class="d-block w-100" alt="slide 1">
        <div class="carousel-caption d-none d-md-block" style="left: 75%;">
          <div class="row">
            <%=link_to "Shop Women", products_path(gender: "women"), class: 'btn text-left btn-outline-dark bg-white btn-lg mb-2'%>
          </div>
          <div class="row">
            <%=link_to "Shop Men", products_path(gender: "men"), class: 'btn text-left btn-outline-dark bg-white btn-lg mb-2'%>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img src="products/assets/images/index_page/carousel/carousel2.jpg" class="d-block w-100" alt="slide 2">
        <div class="carousel-caption d-none d-md-block" style="right: 75%; bottom: 20%;">
          <div class="row">
            <%=link_to "Shop Women", products_path(gender: "women"), class: 'btn text-left btn-outline-dark bg-white btn-lg mb-2'%>
          </div>
          <div class="row">
            <%=link_to "Shop Men", products_path(gender: "men"), class: 'btn text-left btn-outline-dark bg-white btn-lg mb-2'%>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img src="products/assets/images/index_page/carousel/carousel3.jpg" class="d-block w-100" alt="slide 3">
        <div class="carousel-caption d-none d-md-block" style="left: 75%;">
          <div class="row">
            <%=link_to "Shop Women", products_path(gender: "women"), class: 'btn text-left btn-outline-dark bg-white btn-lg mb-2'%>
          </div>
          <div class="row">
            <%=link_to "Shop Men", products_path(gender: "men"), class: 'btn text-left btn-outline-dark bg-white btn-lg mb-2'%>
          </div>
          <div class="row">
            <%=link_to "Shop Kids", products_path(gender: "kids"), class: 'btn text-left btn-outline-dark bg-white btn-lg mb-2'%>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img src="products/assets/images/index_page/carousel/carousel4.png" class="d-block w-100" alt="slide 4">
        <div class="carousel-caption d-none d-md-block" style="right: 75%;">
          <div class="row">
            <%=link_to "Shop Women", products_path(gender: "women"), class: 'btn text-left btn-outline-dark bg-white btn-lg mb-2'%>
          </div>
          <div class="row">
            <%=link_to "Shop Men", products_path(gender: "men"), class: 'btn text-left btn-outline-dark bg-white btn-lg mb-2'%>
          </div>
          <div class="row">
            <%=link_to "Shop Kids", products_path(gender: "kids"), class: 'btn text-left btn-outline-dark bg-white btn-lg mb-2'%>
          </div>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>


  <div class="container-fluid">
    <div class="row pt-5 pb-2 text-center">
      <h3> NEW ARRIVALS </h3>
    </div>
    <div class="row bg">
      <% @products.first(8).each do |product| %>
        <div class="col-3">
          <%= render 'product_card', product: product%>
        </div>
      <% end %>
      <div class="container">
        <div class="row pb-5 bt-0">
          <div class="col text-center">
            <%=link_to "See More", products_path, class: 'btn btn-outline-dark btn-lg'%>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row p-4">
      <div class="col">
        <%=link_to image_tag("/products/assets/images/index_page/shop_by_gender/woman.jpg", :width => '100%', class: 'dock-item'), products_path(gender: "women")%>
      </div>
      <div class="col">
        <%=link_to image_tag("/products/assets/images/index_page/shop_by_gender/man.jpg", :width => '100%', class: 'dock-item'), products_path(gender: "men")%>
